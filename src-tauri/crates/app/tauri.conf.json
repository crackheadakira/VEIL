{
  "productName": "Sodapop Reimagined",
  "version": "0.0.0",
  "identifier": "com.sodapop.reimagined",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sodapop Reimagined",
        "label": "sodapop-reimagined",
        "url": "index.html",
        "width": 1280,
        "height": 720,
        "decorations": false
      },
      {
        "title": "Sodapop Reimagined",
        "label": "sodapop-widget",
        "url": "widget.html",
        "width": 246,
        "height": 307,
        "decorations": false,
        "resizable": false,
        "closable": false,
        "visible": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$LOCALDATA/com.sodapop.reimagined/**"
        ]
      },
      "csp": {
        "img-src": "'self' asset: http://asset.localhost data:"
      }
    }
  },
  "bundle": {
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "targets": "deb",
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}