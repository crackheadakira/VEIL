{
  "productName": "Sodapop Reimagined",
  "version": "0.0.0",
  "identifier": "com.sodapop.reimagined",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sodapop Reimagined",
        "label": "sodapop-reimagined",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$LOCALDATA/sodapop-reimagined/**"
        ]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost"
    }
  },
  "bundle": {
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}